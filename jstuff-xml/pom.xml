<?xml version="1.0"?>
<!--
	@author <a href="http://sebthom.de/">Sebastian Thomschke</a>
-->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.sf.jstuff</groupId>
		<artifactId>jstuff-parent</artifactId>
		<version>2.5.0-SNAPSHOT</version>
	</parent>

	<artifactId>jstuff-xml</artifactId>

	<name>${project.artifactId}:${project.version}</name>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>jstuff-core</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>jdk5</id>
			<activation>
				<jdk>1.5</jdk>
			</activation>
			<dependencies>
				<dependency>
					<groupId>javax.xml.stream</groupId>
					<artifactId>stax-api</artifactId>
					<version>1.0-2</version>
				</dependency>
				<dependency>
					<groupId>javax.xml.bind</groupId>
					<artifactId>jaxb-api</artifactId>
					<!-- 2.2 requires JDK6 -->
					<version>2.1</version>
				</dependency>
				<dependency>
					<groupId>com.sun.xml.bind</groupId>
					<artifactId>jaxb-impl</artifactId>
					<!-- 2.2 requires JDK6 -->
					<version>2.1.12</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<!--
				JDK activation does not work in m2eclipse https://issues.sonatype.org/browse/MNGECLIPSE-1635
				thus we are using the following property as a workaround to allow compilation in eclipse workspace
			-->
			<id>jdk5-m2e</id>
			<activation>
				<property>
					<name>eclipse.application</name>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>javax.xml.stream</groupId>
					<artifactId>stax-api</artifactId>
					<version>1.0-2</version>
				</dependency>
				<dependency>
					<groupId>javax.xml.bind</groupId>
					<artifactId>jaxb-api</artifactId>
					<!-- 2.2 requires JDK6 -->
					<version>2.1</version>
				</dependency>
				<dependency>
					<groupId>com.sun.xml.bind</groupId>
					<artifactId>jaxb-impl</artifactId>
					<!-- 2.2 requires JDK6 -->
					<version>2.1.12</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>